# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Nix
[*.nix]
indent_style = space
indent_size = 2

# Neovim, Hammerspoon
[*.lua]
indent_style = space
indent_size = 2

# Shell script
[*.sh]
indent_style = space
indent_size = 2

# Emacs
[*.el]
indent_style = space
indent_size = 2

# Karabiner Elements
[karabiner.json]
indent_style = space
indent_size = 4

# kitty.conf
[kitty.conf]
indent_style = space
indent_size = 4

# ssh config
[config]
indent_style = space
indent_size = 4

# Stylesheet
[*.{css,scss}]
indent_style = space
indent_size = 2

# TypeScript, JavaScript
[*.{ts,tsx,js,jsx,cjs,mjs}]
indent_style = space
indent_size = 2
